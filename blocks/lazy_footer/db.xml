<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.concrete5.org/doctrine-xml/0.5">
  <table name="btLazyFooter">
    <field name="bID" type="integer">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="title" type="string" size="250">
      <default value=""/>
    </field>
    <field name="subtitle" type="string" size="250">
      <default value=""/>
    </field>
    <field name="isQuoted" type="boolean">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="credits1stMessage" type="string" size="255">
      <default value=""/>
