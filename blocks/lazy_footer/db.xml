    <field name="credits2ndName" type="string" size="30">
      <default value=""/>
    </field>
    <field name="credits2ndUrl" type="string" size="255">
      <default value=""/>
    </field>
    <field name="bgColorRGBA" type="string" size="30">
      <default value=""/>
    </field>
    <field name="bgColorOpacity" type="float" size="3.2">
      <default value="1.00"/>
    </field>
    <field name="bgFID" type="smallint">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="fgColorRGB" type="string" size="30">
      <default value=""/>
    </field>
    <field name="isAnimated" type="boolean">
      <unsigned/>
      <default value="0"/>
    </field>
    <index name="bgFID">
      <col>bgFID</col>
    </index>
  </table>
</schema>
